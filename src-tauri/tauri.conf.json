{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tracking",
  "version": "0.1.0",
  "identifier": "com.rworld.tracking",

  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "title": "tracking",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],

    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "description": "Allow SQLite access in main window",
          "windows": ["main"],
          "urls": ["http://localhost:3000", "tauri://localhost"],
          "permissions": [
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select"
          ]
        }
      ]
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
